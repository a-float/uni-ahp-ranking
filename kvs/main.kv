#:kivy 2.0.0

<CriterionSelect>:
    orientation: 'vertical'
    size_hint_x: 0.7
    # tree view generated in the py file

<MatrixInput>:
    multiline: False
    halign: "center"
    background_color: .7, .7, .7, .4
    foreground_color: .9, .9, .9, 1
    cursor_color: .8, .8, .8, 1
    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0] # centering
    font_size: "20sp"
    write_tab: False    # for tab navigation

<MatrixEditor>:
#    size_hint_y: self.width / self.parent.height
#    pos_hint: {'center_y': 0.5}

<MyButton@Button>:
    size_hint: (None, None)
    text_size: self.width, None
    halign: 'center'
    height: '50dp'

<MatricesDisplay>:
    do_default_tab: False
    tab_height: '30dp'
    tab_width: "30dp"
    # 1:1 ratio
    size_hint: 1, None
    size: self.width, self.width
    pos_hint: {'top': 1}


<ControlPanel>:
    orientation: "vertical"

<Controller>:
    canvas.before:
        Color:
            rgba: .1, .1, .1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "horizontal"
    CriterionSelect:
        id: criterion_select
    MatricesDisplay:
        id: matrices_display
    ControlPanel:
        id: control_panel
